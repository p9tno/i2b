extends ../../layout/layout.pug

block variable
    -var path = '../../';
    -var header_class = 'header_light'; // header_dark
    -var video_bg = false;

block content
    // begin decision
    section#decision.decision.section
        .container_center
            h1.section__title
                span Решения
            .decision__list
                each item in ['IT-решения', 'Информационная безопасность', 'Консалтинг', 'Отраслевые решения', 'Техническая поддержка', ]

                    a(href="#").decision__item
                        .decision__video
                            video(width="100%" allowfullscreen="true" muted="muted" autoplay="autoplay" playsinline="playsinline" loop="loop")
                                source(src="../../media/waves_sm.mp4" type="video/mp4")
                                //- source(src="media/main-video.webm" type="video/webm")
                                //- source(src="media/main-video.m4v" type="video/mp4")
                                //- source(src="media/main-video.ogv" type="video/ogg")
                        .decision__title
                            span=item


    // end decision
